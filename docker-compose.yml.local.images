version: "3.7"

services:

  db:
    build: ./db
    container_name: db
    env_file: .env
    expose:
      - "${POSTGRES_PORT}"
    volumes:
      - db_data:/var/lib/postgresql/data

  app:
    build: ./app
    container_name: app
    env_file: .env
    expose:
      - "${APP_PORT}"
    depends_on:
      - db

  web:
    build: ./web
    container_name: web
    env_file: .env
    ports:
      - "${WEB_PORT}:${WEB_PORT}"
    depends_on:
      - app

volumes:
  db_data: